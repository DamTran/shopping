@page "/error/404"
@model Taste.Pages.Error.NotFoundIndexModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <title>@Model.Title - @Model.Application</title>

    <link href="https://fonts.googleapis.com/css2?family=Kaushan+Script&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        body {
            background-image: url(https://livedemo00.template-help.com/wt_prod-10492/theme/images/bg-404.jpg);
        }

        header {
            padding: calc(1em + 3vh) 0 calc(1em + 2vh);
            padding-top: calc(1em + 9vh);
        }

        .logo {
            font-family: 'Kaushan Script', cursive;
            font-size: 40px;
            text-align: center;
        }

            .logo a {
                color: #ffffff;
            }
        .container {
            text-align: center;
            margin-right: auto;
            margin-left: auto;
        }
        .status-code {
            font-size: 20em;
            font-weight: 500;
            line-height: 1;
            letter-spacing: .05em;
            font-family: "Poppins", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            color: rgba(255, 255, 255, 0.14);
            animation: titleColor 3s linear infinite;
        }
        .not-found {
            letter-spacing: .05em;
            text-transform: uppercase;
            color: white;
            font-weight: 300;
        }
        .go-to-home {
            margin-top: 50px;
            padding: 19px 50px;
            font-size: 14px;
            line-height: 2;
            color: #151515;
            background-color: #e9da5d;
            border-color: #e9da5d;
            cursor: pointer;
        }
        .section-single-footer {
            padding: calc(1em + 2vh) 0 calc(1em + 3vh);
            margin-top: 50px;
            text-align: center;
        }
    </style>
</head>

<body>

    <header>
        <h1 class="logo">
            <a asp-area="" asp-page="/Index">TASTE</a>
        </h1>
    </header>
    <main role="main">
        <div class="container">
            <p class="status-code">404</p>
            <h1 class="not-found">Page Not Found</h1>
            <button class="go-to-home" type="button"><h5>Go to home page</h5></button>
        </div>
        <div class="section-single-footer">
            <p class="rights"><span>©&nbsp; </span><span class="copyright-year">2021</span><span>&nbsp;</span><span>Friends</span><span>.&nbsp; All rights reserved.</span><span>&nbsp;</span><a href="terms-of-use.html">Privacy Policy</a><span>.</span></p>
        </div>
    </main>
</body>
</html>