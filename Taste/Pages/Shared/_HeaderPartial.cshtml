@model Taste.HeaderModel

@using Taste.Utility
@using Microsoft.AspNetCore.Http

@inject IHttpContextAccessor HttpContextAccessor

<div class="container-fluid">
    <div class="row my-3">
        <div class="col-4">
            <a href="tel:@Model.Telephone">Call us: @Model.Telephone</a>
            <br />
            <a href="mailto:@Model.EmailAddress">@Model.EmailAddress</a>
        </div>
        <div class="col-4 text-center">
            <h1>
                <a class="text-my-shope" asp-area="" asp-page="/Index">TASTE</a>
            </h1>
        </div>
        <div class="col-4 text-right nav-link">
            <a href="#" title="Search">
                <i class="fa fa-2x fa-search"></i>
            </a>
            <a asp-page="/Cart/Index" title="Go to your cart" rel="nofollow">
                <i class="fa fa-2x fa-shopping-cart"></i>
            </a>
            <a asp-page="/SignIn/Index" title="Sign in" rel="nofollow">
                <i class="fa fa-2x fa-user-circle"></i>
            </a>
        </div>
    </div>
</div>

<nav class="navbar navbar-expand-sm bg-my-shope sticky-top">
    <div class="container">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse"></div>
        <div class="navbar-collapse collapse d-sm-flex">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-page="/Home/Index">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-page="/AboutUs/Index">
                        About Us
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-page="/Products/Index">
                        Products
                    </a>
                </li>
                @if (User.IsInRole(SD.ManagerRole) || User.IsInRole(SD.KitchenRole))
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Admin/Order/ManageOrder">
                            Manage Order
                        </a>
                    </li>
                }
                @if (User.IsInRole(SD.ManagerRole) || User.IsInRole(SD.FrontDeskRole))
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Admin/Order/OrderList">
                            Order Pickup
                        </a>
                    </li>
                }
                @if (User.IsInRole(SD.CustomerRole))
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Admin/Order/OrderList">
                            Order History
                        </a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-page="/Blog/Index">
                        Blog
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-page="/ContactUs/Index">
                        Contact Us
                    </a>
                </li>
                @if (User.IsInRole(SD.ManagerRole))
                {
                    // TODO: Move the administration section somewhere else
                    <li class="nav-item dropdown">
                        <a class="nav-link text-white dropdown-toggle" href="#" id="navbarDropDown" data-toggle="dropdown">
                            Admin
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-page="/Admin/Category/Index">Category</a>
                            <a class="dropdown-item" asp-page="/Admin/FoodType/Index">Food Type</a>
                            <a class="dropdown-item" asp-page="/Admin/MenuItem/Index">Menu Item</a>
                            <a class="dropdown-item" asp-page="/Admin/User/Index">Users</a>
                        </div>
                    </li>
                }
            </ul>
            <!--<partial name="_LoginPartial" />-->
        </div>
    </div>
</nav>