@using Taste.Utility
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

    <div class="container text-info">
        <div class="row my-4">
            <div class="col-4">
                Call us: +1 (844) 123 456 78
                <br />
                info@demolink.org
            </div>
            <div class="col-4 text-center">
                <h1>
                    <a class="" asp-area="" asp-page="/Index">My shop name</a>
                </h1>
            </div>
            <div class="col-4 text-right nav-link ">
                <h3>
                    <a href="#" class="text-decoration-none m-1">
                        <i class="fas fa-search"></i>
                    </a>
                    @if (HttpContextAccessor.HttpContext.Session.GetInt32(SD.ShoppingCart) != null)
                    {
                        <a asp-page="/Customer/Cart/Index" class="m-1">
                            @{
                                var count = HttpContextAccessor.HttpContext.Session.GetInt32(SD.ShoppingCart);
                            }
                            <i class="fas fa-shopping-cart">(@count)</i>
                        </a>
                    }
                    else
                    {
                        <a href="#" class="m-1">
                            <i class="fas fa-shopping-cart">(0)</i> 
                        </a>
                    }
                </h3>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-sm bg-white sticky-top text-primary">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <partial name="_LoginPartial" />
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    @if (User.IsInRole(SD.ManagerRole))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropDown" data-toggle="dropdown">
                                Admin
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-page="/Admin/Category/Index">Category</a>
                                <a class="dropdown-item" asp-page="/Admin/FoodType/Index">Food Type</a>
                                <a class="dropdown-item" asp-page="/Admin/MenuItem/Index">Menu Item</a>
                                <a class="dropdown-item" asp-page="/Admin/User/Index">Users</a>
                            </div>
                        </li>
                    }

                    @if (User.IsInRole(SD.ManagerRole) || User.IsInRole(SD.KitchenRole))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Admin/Order/ManageOrder">Manage Order</a>
                        </li>
                    }
                    @if (User.IsInRole(SD.ManagerRole) || User.IsInRole(SD.FrontDeskRole))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Admin/Order/OrderList">Order Pickup</a>
                        </li>
                    }
                    @if (User.IsInRole(SD.CustomerRole))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Admin/Order/OrderList">Order History</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
