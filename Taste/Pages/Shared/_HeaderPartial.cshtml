@using Taste.Utility
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

    <div class="container">
        <div class="row">
            <div class="col-4">
                Call us: +1 (844) 123 456 78
                <br/>
                info@demolink.org
            </div>
            <div class="col-4">
                My website name
            </div>
            <div class="col-4">
                Search
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-sm bg-dark bg-white sticky-top">
        <div class="container">
            <a class="navbar-brand text-white" asp-area="" asp-page="/Index">Taste</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <partial name="_LoginPartial" />
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    @if (User.IsInRole(SD.ManagerRole))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" id="navbarDropDown" data-toggle="dropdown">
                                Admin
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item text-white" asp-page="/Admin/Category/Index">Category</a>
                                <a class="dropdown-item text-white" asp-page="/Admin/FoodType/Index">Food Type</a>
                                <a class="dropdown-item text-white" asp-page="/Admin/MenuItem/Index">Menu Item</a>
                                <a class="dropdown-item text-white" asp-page="/Admin/User/Index">Users</a>
                            </div>
                        </li>
                    }

                    @if (User.IsInRole(SD.ManagerRole) || User.IsInRole(SD.KitchenRole))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Admin/Order/ManageOrder">Manage Order</a>
                        </li>
                    }
                    @if (User.IsInRole(SD.ManagerRole) || User.IsInRole(SD.FrontDeskRole))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Admin/Order/OrderList">Order Pickup</a>
                        </li>
                    }
                    @if (User.IsInRole(SD.CustomerRole))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Admin/Order/OrderList">Order History</a>
                        </li>
                    }
                    @if (HttpContextAccessor.HttpContext.Session.GetInt32(SD.ShoppingCart) != null)
                    {
                        <li>
                            <a asp-page="/Customer/Cart/Index" class="nav-link text-white-50">
                                @{
                                    var count = HttpContextAccessor.HttpContext.Session.GetInt32(SD.ShoppingCart);
                                }
                                <i class="fas fa-shopping-cart"></i> &nbsp; (@count)
                            </a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a href="#" class="nav-link text-white-50">
                                <i class="fas fa-shopping-cart"></i> &nbsp; (0)
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
