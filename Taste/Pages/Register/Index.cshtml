@page "/register"
@model Taste.Pages.Register.IndexModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <title>@Model.Title - @Model.Application</title>

    <link rel="stylesheet" href="https://cdn.materialdesignicons.com/4.8.95/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/sign-in.css" />
</head>
<body>
    <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
        <div class="container">
            <div class="card login-card">
                <div class="row no-gutters">
                    <div class="col-md-5">
                        <img src="https://livedemo00.template-help.com/wt_prod-10492/theme/images/grid-gallery-1-370x315.jpg" alt="login" class="login-card-img" />
                    </div>
                    <div class="col-md-7">
                        <div class="card-body">
                            <a asp-page="/Home/Index" class="brand-wrapper" title="Go to home page">
                                <img src="/favicon.ico" alt="logo" class="logo" /> @Model.Application
                            </a>
                            <p class="login-card-description">
                                Register a new account
                            </p>
                            <form method="post">
                                <div class="form-group">
                                    <label for="email" class="sr-only">Email</label>
                                    <input type="email" name="email" id="email" class="form-control" placeholder="Email address" />
                                </div>
                                <div class="form-group mb-4">
                                    <label for="password" class="sr-only">Password</label>
                                    <input type="password" name="password" id="password" class="form-control" placeholder="Password" />
                                </div>
                                <div class="form-group mb-4">
                                    <label for="confirm-password" class="sr-only">Confirm password</label>
                                    <input type="password" name="confirm-password" id="confirm-password" class="form-control" placeholder="Confirm password" />
                                </div>
                                <input name="register" id="register" class="btn btn-block login-btn mb-4" type="button" value="Register" />
                            </form>
                            <a asp-page="/ForgotPassword/Index" class="forgot-password-link">
                                Forgot password?
                            </a>
                            <p class="login-card-footer-text">
                                Already have an account? <a asp-page="/SignIn/Index" class="text-reset">Sign in here</a>
                            </p>
                            <nav class="login-card-footer-nav">
                                <a asp-page="/TermsOfUse/Index">
                                    Terms of use.
                                </a>
                                <a asp-page="/PrivacyPolicy/Index">
                                    Privacy policy
                                </a>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>